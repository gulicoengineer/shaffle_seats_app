<h1>生徒の登録</h1>

<div class="container">
	<%= form_with(model: @student, local:true) do |f| %>
		<%= f.label :last_name, "姓" %>
		<%= f.text_field :last_name %>

		<%= f.label :first_name, "名" %>
		<%= f.text_field :first_name %>
		
		<%= f.label :sex, "性別" %>
		<%= f.radio_button :sex, "man" %>男 <%= f.radio_button :sex, "woman" %>女
		
		<%= f.label :school_year, "学年" %>
		<%= f.number_field :school_year, min:1, max:6 %>
		
		<%= f.label :class_num, "クラス" %>
		<%= f.number_field :class_num, min:1, max:10 %>
		
		<%= f.label :attendance_number, "出席番号" %>
		<%= f.number_field :attendance_number, min:1, max:50 %>

		<%= f.submit "登録", class:"btn" %>
	<% end %>
</div>
